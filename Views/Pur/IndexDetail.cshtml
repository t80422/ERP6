                </div>
                <!-- sign out -->
                <button class="signout-btn" onClick='window.location.href = "@Url.Action("Index", "Login")"'></button>
            </div>
        </header>
        <!-- main -->
        <main class="container-wrap">
            <!-- aside -->
            <aside class="aside-wrap">
                <div class="aside-head">STO進銷系統</div>
                <div class="aside-list">
                    <div class="aside-item">
                        <div class="aside-title is-c201 is-active">
                            <h2>進銷系統</h2>
                        </div>
                        <div class="aside-link" style="display: block;">
                            <ul>
                                <li>
                                    <a href="@Url.Action("Index", "Vendor")">C201_廠商基本資料檔</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Customer")">C202_客戶基本資料檔</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Stock")">C203_產品基本資料檔</a>
                                </li>
                                <li class="is-active">
                                    <a href="@Url.Action("Index", "Pur")">C204_採購單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C205_領料入庫資料檔</a>
                                </li>
                                <li>
                                    <a href="">C206_庫存異動單建檔</a>
                                </li>
                                <li>
                                    <a href="">C207_產品促銷單建檔</a>
                                </li>
                                <li>
                                    <a href="">C208_報價單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C209_出貨單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C210_寄賣客戶庫存檔</a>
                                </li>
                                <li>
                                    <a href="">C211_產品期初資料檔</a>
                                </li>
                                <li>
                                    <a href="">C212_盤點單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C213_加工產品資料檔</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <!-- inner -->
            <div class="container-inner">
                <!-- top -->
                <div class="top-wrap">
                    <!-- top-title -->
                    <div class="top-title">
                        <h2>C204_採購單明細資料建檔</h2>
                    </div>
                    <!-- top-toollist -->
                    <div class="top-toollist">
                        <ul>
                            <li>
                                <button class="tool-btn-first"><span>首筆</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-prev"><span>前筆</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-next"><span>次筆</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-last"><span>末筆</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-add"><span>新增</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-edit"><span>修改</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-del"><span>刪除</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-search"><span>查詢</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-leave"><span>離開</span></button>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- content -->
                <div class="container-content">
                    <div class="container-column">
                        <div class="container-col-1">
                            <div class="data-wrap">
                                <div class="data-title">
                                    <div class="f-1 ta-left">產品編號</div>
                                    <div class="f-1 ta-left">序號</div>
                                </div>
                                <div class="data-list">
                                    @if (Model.pur20List != null && Model.pur20List.Count > 0)
                                    {
                                        @foreach (var item in Model.pur20List)
                                        {
                                            <div class="data-item">
                                                <div class="f-1 pur20 purno ta-left">@item.PurNo</div>
                                                <div class="f-1 pur20 serno ta-left">@item.Serno</div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="container-col-2">
                            <form id="form" method="post">
                                @Html.HiddenFor(x => x.IsSearch)
                                @Html.HiddenFor(x => x.PurNo)
                                <div class="inside-wrap">
                                    <div class="inside-overflow">
                                        <div class="form-wrap">
                                            <div class="form-group">
                                                <div class="form-row">
                                                    <div class="form-flex f-s">
                                                        <div class="form-input">
                                                            <label for="">序號</label>
                                                            @Html.TextBoxFor(x => x.Serno, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-s">
                                                        @*<div class="form-input">
                                                                <label for="">產品編號</label>
                                                                @Html.TextBoxFor(x => x.PartNo, new { @readonly = "readonly" })
                                                            </div>*@
                                                        <div class="form-input">
                                                            <label for="">產品編號</label>
                                                            <div class="option">
                                                                @Html.DropDownListFor(x => x.PartNo, ViewBag.Stock10ListData as SelectList, "", htmlAttributes: new { @class = "easyui-combobox" })
                                                                @*@Html.TextBoxFor(x => x.PartNo, new { @class = "easyui-combobox", @readonly = "readonly" })*@
                                                            </div>
                                                        </div>
                                                    </div>
                                                    @*<div class="form-flex f-s">
                                                            <div class="form-input">
                                                                <label for="">品名規格</label>
                                                                @Html.TextBoxFor(x => x.Spec, new { @readonly = "readonly" })
                                                            </div>
                                                        </div>*@
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-s">
                                                        <div class="form-input">
                                                            <label for="">採購量</label>
                                                            @Html.TextBoxFor(x => x.Qty, new { @class = "easyui-combobox", @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-s">
                                                        <div class="form-input">
                                                            <label for="">單位</label>
                                                            @Html.DropDownListFor(x => x.Unit, ViewBag.UnitList as SelectList, "請選擇", htmlAttributes: new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-s">
                                                        <div class="form-input">
                                                            <label for="">稅別</label>
                                                            <div class="option">
                                                                @Html.DropDownListFor(x => x.TaxType, ViewBag.TaxTypeList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-s">
                                                        <div class="form-input">
                                                            <label for="">單價</label>
                                                            @Html.TextBoxFor(x => x.Price, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-s">
                                                        <div class="form-input">
                                                            <label for="">折扣率</label>
                                                            @Html.TextBoxFor(x => x.Discount, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-s">
                                                        <div class="form-input">
                                                            <label for="">金額</label>
                                                            @Html.TextBoxFor(x => x.Amount, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-s">
                                                        <div class="form-input">
                                                            <label for="">備註</label>
                                                            @Html.TextBoxFor(x => x.Memo, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-s">
                                                        <div class="form-input">
                                                            <label for="">已進量</label>
                                                            @Html.TextBoxFor(x => x.InQty, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="btn-bottom">
                                            <button type="button" class="btn-clean search">清除條件</button>
                                            <button type="submit" class="btn-submit">確定</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- popup -->
        <!-- 確認視窗 -->
        <div class="popup-wrap check">
            <div class="p-form">
                <p>是否確定執行?</p>
                <div class="p-btn pad-0">
                    <button type="button" class="btn-cancel small check">取消</button>
                    <button type="button" class="btn-submit small check">確定</button>
                </div>
            </div>
        </div>
        <!-- overlay -->
        <div class="popup-overlay"></div>
    </article>
    <!-- JS -->
    <script src="~/js/script.js"></script>
    <script>

        @*//產品資料
        $('#PartNo').combobox({
            url: "@Url.Action("AjaxStockForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text',
            onSelect: function (data) {
                $("#Unit").combobox('setValue', data.unit);
                $("#TaxType").combobox('setValue', data.taxType);
            }
        });*@

        //初始資料
        $(function () {
            //先清除所有資料的綁定狀態
            $('.data-item').each(function (i, v) {
                $(this).removeClass('active');
            });

            let serNo = $("#Serno").val();

            if (serNo) {
                //找出此筆資料
                $('.data-item').each(function (i, v) {
                    if ($(v).children('.f-1.pur20.serno').text() == serNo) {
                        $(this).addClass('active');

                        return;
                    }
                });

                let el = document.querySelector('.data-item.active');

                if (el) {

                    el.scrollIntoView(true);
                }
            }
        });

        //新增資料
        $(function () {
            $('.tool-btn-add').on('click', function () {
                $(".popup-wrap.check").addClass("is-active");
                $(".popup-overlay").addClass("is-active");

                //取消
                $('.btn-cancel.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");
                });

                //確定
                $('.btn-submit.small.check').on('click', function () {

                    let purNo = $("#PurNo").val();

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    window.location.href = "@Url.Action("AddDetail", "Pur")/?PurNo="+ purNo;
                });
            });
        });

        //刪除資料
        $('.tool-btn-del').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
                $('.btn-submit.small.check').on('click', function () {
                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let purNo = $("#PurNo").val()
                    let serNo = $("#Serno").val();

                    if (purNo != '' && serNo != '') {
                        $.ajax({
                            url: "@Url.Action("DeleteDetail", "Pur")",
                            type: 'POST',
                            data: { PurNo: purNo, SerNo: serNo },
                            success: function (data) {
                                if (data.isTrue) {
                                    alert("刪除成功!");

                                    let purNo = data.purNo

                                    window.location.href = "@Url.Action("IndexDetail", "Pur")/?PurNo=" + purNo;
                                }
                                else {
                                    alert("刪除失敗!");
                                }
                            }
                        });
                    }
                    else {
                        alert("找不到刪除資料!");
                    }
                });
        });

        //修改資料
        $('.tool-btn-edit').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {

                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let purNo = $("#PurNo").val();
                    let serNo = $("#Serno").val();

                    if (purNo == '' || serNo == '') {
                        alert("找不到編輯資料!");
                    }
                    else {
                        window.location.href = "@Url.Action("EditDetail", "Pur")/?PurNo=" + purNo + "&SerNo=" + serNo;
                    }
                });
        });

        //首筆資料
        $(function () {
            $('.tool-btn-first').on('click', function () {
                //先清空錨點
                let firstDataItem = $('.data-item.active');

                if (firstDataItem.length != 0) {
                    firstDataItem.removeClass('active');
                }

                $('.data-item').each(function (i, v) {
                    if (i === 0) {
                        let purNo = $(v).children('.f-1.pur20.purno').text();
                        let serNo = $(v).children('.f-1.pur20.serno').text();

                        $(v).addClass('active');

                        let el = document.querySelector('.data-item.active');

                        el.scrollIntoView(true);

                        window.location.href = "@Url.Action("IndexDetail", "Pur")/?PurNo=" + purNo + "&SerNo=" + serNo;
                    }
                });
            });
        });

        //末筆資料
        $(function () {
            $('.tool-btn-last').on('click', function () {
                //先清空錨點
                let lastDataItem = $('.data-item.active');

                if (lastDataItem.length != 0 ) {
                    lastDataItem.removeClass('active');
                }

                //找出資料總比數
                let dataItem = $('.data-item');
                let length = dataItem.length;

                //找出最後一筆資料
                dataItem.each(function (i, v) {
                    if (i === (length - 1)) {
                        let purNo = $(v).children('.f-1.pur20.purno').text();
                        let serNo = $(v).children('.f-1.pur20.serno').text();
                        $(v).addClass('active');

                        let el = document.querySelector('.data-item.active');

                        el.scrollIntoView(true);

                        window.location.href = "@Url.Action("IndexDetail", "Pur")/?PurNo=" + purNo + "&SerNo=" + serNo;
                    }
                });
            });
        });

        //下一筆資料
        $(function () {
            $(".tool-btn-next").on('click', function () {

                if ($('.data-item.active').length == 0) {
                    alert("請選擇起始資料");

                    return;
                }

                //找出下一個錨點
                var nextClass = $('.data-item.active').next();
                var purNo = $('.data-item.active').next().children('.f-1.pur20.purno').text();
                var serNo = $('.data-item.active').next().children('.f-1.pur20.serno').text();

                if (nextClass.length == 0) {
                    alert("已沒有下一筆資料")

                    return;
                }

                //刪除舊錨點，新增新錨點
                nextClass.addClass('active');
                nextClass.prev().removeClass('active');

                let el = document.querySelector('.data-item.active');

                el.scrollIntoView(true);

                window.location.href = "@Url.Action("IndexDetail", "Pur")/?PurNo=" + purNo + "&SerNo=" + serNo;
            });
        });

        //上一筆資料
        $(function () {
            $(".tool-btn-prev").on('click', function () {

                if ($('.data-item.active').length == 0) {
                    alert("請選擇起始資料");

                    return;
                }

                //找出上一個錨點
                var prevClass = $('.data-item.active').prev();
                var purNo = $('.data-item.active').prev().children('.f-1.pur20.purno').text();
                var serNo = $('.data-item.active').prev().children('.f-1.pur20.serno').text();

                if (prevClass.length == 0) {
                    alert("已沒有上一筆資料")

                    return;
                }

                //刪除舊錨點，新增新錨點
                prevClass.addClass('active');
                prevClass.next().removeClass('active');

                let el = document.querySelector('.data-item.active');

                el.scrollIntoView(true);

                window.location.href = "@Url.Action("IndexDetail", "Pur")/?PurNo=" + purNo + "&SerNo=" + serNo;
            });
        });

        //找出資料
        $(function () {
            $('.data-item').each(function (i, v) {
                $(this).on('click', function () {

                    $('.data-item').each(function (i, v) {
                       $(this).removeClass('active');
                    });

                    let purNo = $(this).children('.f-1.pur20.purno').text();
                    let serNo = $(this).children('.f-1.pur20.serno').text();

                    $(this).addClass('active');

                    window.location.href = "@Url.Action("IndexDetail", "Pur")/?PurNo=" + purNo + "&SerNo=" + serNo;
                });
            });
        });

        //離開
        $(function () {
            $(".tool-btn-leave").on('click', function () {
                window.location.href = "@Url.Action("Index","Pur")";
            });
        });

        //收尋
        $('.tool-btn-search').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {

                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
            $('.btn-submit.small.check').on('click', function () {
                $('#IsSearch').val(true);

                //清除資料
                $("#Serno").val('');
                $("#PurNo").combobox('setValue', '');
                $("#Spec").val('');
                $("#Qty").val('');
                $("#Unit").val('');
                $("#TaxType").val('');
                $("#Price").val('');
                $("#Discount").val('');
                $("#Amount").val('');
                $("#Memo").val('');
                $("#InQty").val('');

                //清除readonly屬性
                $("#Serno").removeAttr('readonly');
                $("#PurNo").combobox('readonly', false);
                $("#Spec").removeAttr('readonly');
                $("#Qty").removeAttr('readonly');
                $("#Unit").removeAttr('readonly');
                $("#TaxType").removeAttr('readonly');
                $("#Price").removeAttr('readonly');
                $("#Discount").removeAttr('readonly');
                $("#Amount").removeAttr('readonly');;
                $("#Memo").removeAttr('readonly');
                $("#InQty").removeAttr('readonly');

                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                        @*window.location.href = "@Url.Action("Search", "Vendor")";*@
                });
        });

        //清除搜尋資料
        $('.btn-clean.search').on('click', function () {

            //先清除所有資料的綁定狀態
            $('.data-item').each(function (i, v) {
                $(this).removeClass('active');
            });

            //清除資料
            $("#Serno").val('');
            $("#PurNo").combobox('setValue', '');
            $("#Spec").val('');
            $("#Qty").val('');
            $("#Unit").val('');
            $("#TaxType").val('');
            $("#Price").val('');
            $("#Discount").val('');
            $("#Amount").val('');
            $("#Memo").val('');
            $("#InQty").val('');
        });
    </script>
</body>
</html>




