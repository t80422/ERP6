                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input unit-text">
                                                            <label for="">客戶編號</label>
                                                            <div id="HidOption">
                                                                <div class="option">
                                                                    <input id="CoNoDDL" name="CoNoDDL" class="easyui-combobox" />
                                                                    @*@Html.DropDownListFor(x => x.CoNoDDL, ViewBag.CoList as SelectList, "", htmlAttributes: new { @class = "easyui-combobox" })*@
                                                                </div>
                                                            </div>
                                                            <div id="HidText" class="flex">
                                                                <div>
                                                                    @Html.TextBoxFor(x => x.CoNo, new { @readonly = "readonly" })
                                                                </div>
                                                                <div>
                                                                    @Html.TextBoxFor(x => x.CoName, new { @readonly = "readonly" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">幣別</label>
                                                            @Html.TextBoxFor(x => x.Ntus, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">免稅金額</label>
                                                            @Html.TextBoxFor(x => x.Total0, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">本期銷售</label>
                                                            @Html.TextBoxFor(x => x.Total, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">應稅金額</label>
                                                            @Html.TextBoxFor(x => x.Total1, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">本期退貨</label>
                                                            @Html.TextBoxFor(x => x.RetTotal, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">稅額</label>
                                                            @Html.TextBoxFor(x => x.Tax, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-1">
                                                        <div class="form-input unit-percent">
                                                            <label for="">退貨率</label>
                                                            <div>
                                                                @Html.TextBoxFor(x => x.RetPercent, new { @readonly = "readonly" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">本月應收</label>
