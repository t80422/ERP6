        @*//表尾資料
        $('#PaperTail').combobox({
            url: "@Url.Action("AjaxMemoForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text'
        });*@

        //初始資料
        $(function () {
            //先清除所有資料的綁定狀態
            $('.data-item').each(function (i, v) {
                $(this).removeClass('active');
            });

            let purNo = $("#PurNo").val();

            if (purNo) {
                //找出此筆資料
                $('.data-item').each(function (i, v) {
                    if ($(v).children('.f-1.pur10').text() == purNo) {
                        $(this).addClass('active');

                        return;
                    }
                });

                let el = document.querySelector('.data-item.active');

                if (el) {

                    el.scrollIntoView(true);
                }
            }
        });

        //新增資料
        $(function () {
            $('.tool-btn-add').on('click', function () {
                $(".popup-wrap.check").addClass("is-active");
                $(".popup-overlay").addClass("is-active");

                //取消
                $('.btn-cancel.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");
                });

                //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    window.location.href = "@Url.Action("Add", "Pur")";
                });
            });
        });

        //刪除資料
        $('.tool-btn-del').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
            $('.btn-submit.small.check').on('click', function () {
                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let purNo = $("#PurNo").val()

                    if (purNo != '') {
                        $.ajax({
                            url: "@Url.Action("Delete", "Pur")",
                            type: 'POST',
                            data: { PurNo: purNo },
                            success: function (data) {
                                if (data) {
                                    alert("刪除成功!");

                                    window.location.href = "@Url.Action("Index", "Pur")";
                                }
                                else {
                                    alert("刪除失敗!");
                                }
                            }
                        });
                    }
                    else {
                        alert("找不到刪除資料!");
                    }
                });
        });

        //修改資料
        $('.tool-btn-edit').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {

                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let purNo = $("#PurNo").val();

                    if (!purNo) {
                        alert("找不到編輯資料!");
                    }
                    else {
                        window.location.href = "@Url.Action("Edit", "Pur")/?PurNo=" + purNo;
                    }
                });
        });

        //首筆資料
        $(function () {
            $('.tool-btn-first').on('click', function () {
                //先清空錨點
                let firstDataItem = $('.data-item.active');

                if (firstDataItem.length != 0) {
                    firstDataItem.removeClass('active');
                }

                $('.data-item').each(function (i, v) {
                    if (i === 0) {
                        let firstItem = $(v).children('.f-1.pur10').text();

                        $(v).addClass('active');

                        let el = document.querySelector('.data-item.active');

                        el.scrollIntoView(true);

                        window.location.href = "@Url.Action("Index", "Pur")/?PurNo=" + firstItem;
                    }
                });
            });
        });

        //末筆資料
        $(function () {
            $('.tool-btn-last').on('click', function () {
                //先清空錨點
                let lastDataItem = $('.data-item.active');

                if (lastDataItem.length != 0 ) {
                    lastDataItem.removeClass('active');
                }

                //找出資料總比數
                let dataItem = $('.data-item');
                let length = dataItem.length;

                //找出最後一筆資料
                dataItem.each(function (i, v) {
                    if (i === (length - 1)) {
                        let purNo = $(v).children('.f-1.pur10').text();
                        $(v).addClass('active');

                        let el = document.querySelector('.data-item.active');

                        el.scrollIntoView(true);

                        window.location.href = "@Url.Action("Index", "Pur")/?PurNo=" + purNo;
                    }
                });
            });
        });

        //下一筆資料
        $(function () {
            $(".tool-btn-next").on('click', function () {

                if ($('.data-item.active').length == 0) {
                    alert("請選擇起始資料");

                    return;
                }

                //找出下一個錨點
                var nextClass = $('.data-item.active').next();
                var nextClassValue = $('.data-item.active').next().children('.f-1.pur10').text();

                if (nextClass.length == 0) {
                    alert("已沒有下一筆資料")

                    return;
                }

                //刪除舊錨點，新增新錨點
                nextClass.addClass('active');
                nextClass.prev().removeClass('active');

                let el = document.querySelector('.data-item.active');

                el.scrollIntoView(true);

                window.location.href = "@Url.Action("Index", "Pur")/?PurNo=" + nextClassValue;
            });
        });

        //上一筆資料
        $(function () {
            $(".tool-btn-prev").on('click', function () {

                if ($('.data-item.active').length == 0) {
                    alert("請選擇起始資料");

                    return;
                }

                //找出上一個錨點
                var prevClass = $('.data-item.active').prev();
                var prevClassValue = $('.data-item.active').prev().children('.f-1.pur10').text();

                if (prevClass.length == 0) {
                    alert("已沒有上一筆資料")

                    return;
                }

                //刪除舊錨點，新增新錨點
                prevClass.addClass('active');
                prevClass.next().removeClass('active');

                let el = document.querySelector('.data-item.active');

                el.scrollIntoView(true);

                window.location.href = "@Url.Action("Index", "Pur")/?PurNo=" + prevClassValue;
            });
        });

        //找出資料
        $(function () {
            $('.data-item').each(function (i, v) {
                $(this).on('click', function () {

                    $('.data-item').each(function (i, v) {
                       $(this).removeClass('active');
                    });

                    let purNo = $(this).children('.f-1.pur10').text();

                    $(this).addClass('active');

                    window.location.href = "@Url.Action("Index", "Pur")/?PurNo=" + purNo;
