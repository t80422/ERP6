                </div>
                <!-- sign out -->
                <button class="signout-btn" onClick='window.location.href = "@Url.Action("Index", "Login")"'></button>
            </div>
        </header>
        <!-- main -->
        <main class="container-wrap">
            <!-- aside -->
            <aside class="aside-wrap">
                <div class="aside-head">STO進銷系統</div>
                <div class="aside-list">
                    <div class="aside-item">
                        <div class="aside-title is-c201 is-active">
                            <h2>進銷系統</h2>
                        </div>
                        <div class="aside-link" style="display: block;">
                            <ul>
                                <li>
                                    <a href="@Url.Action("Index", "Vendor")">C201_廠商基本資料檔</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Customer")">C202_客戶基本資料檔</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Stock")">C203_產品基本資料檔</a>
                                </li>
                                <li class="is-active">
                                    <a href="@Url.Action("Index", "Pur")">C204_採購單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C205_領料入庫資料檔</a>
                                </li>
                                <li>
                                    <a href="">C206_庫存異動單建檔</a>
                                </li>
                                <li>
                                    <a href="">C207_產品促銷單建檔</a>
                                </li>
                                <li>
                                    <a href="">C208_報價單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C209_出貨單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C210_寄賣客戶庫存檔</a>
                                </li>
                                <li>
                                    <a href="">C211_產品期初資料檔</a>
                                </li>
                                <li>
                                    <a href="">C212_盤點單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C213_加工產品資料檔</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <!-- inner -->
            <div class="container-inner">
                <!-- top -->
                <div class="top-wrap">
                    <!-- top-title -->
                    <div class="top-title">
                        <h2>C204_採購單資料建檔</h2>
                    </div>
                    <!-- top-toollist -->
                    <div class="top-toollist">
                        <ul>
                            <li>
                                <button class="tool-btn-leave"><span>離開</span></button>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- content -->
                <div class="container-content">
                    <div class="container-column">
                        <div class="container-col-1">
                            <div class="data-wrap">
                                <div class="data-title">
                                    <div class="f-1 ta-left">採購單號</div>
                                </div>
                                <div class="data-list">
                                    @foreach (var item in Model.pur10List)
                                    {
                                        <div class="data-item">
                                            <div class="f-1 pur10 ta-left">@item.PurNo</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="container-col-2">
                            <form id="form" method="post">
                                <div class="inside-wrap">
                                    <div class="inside-overflow">
                                        <div class="form-wrap">
                                            <div class="form-group">
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">採購日期</label>
                                                            @Html.TextBoxFor(x => x.PurDate, new { type = "date" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">交貨日期</label>
                                                            @Html.TextBoxFor(x => x.SendDate, new { type = "date" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">採購單號</label>
                                                            @Html.TextBoxFor(x => x.PurNo, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="VendorNo">廠商編號</label>
                                                            <div class="option">
                                                                @Html.TextBoxFor(x => x.VendorNo, new { @class = "easyui-combobox" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">幣別</label>
                                                            <select name="Ntus" id="Ntus">
                                                                <option value="">NTD</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">採購人員</label>
                                                            <div class="option">
                                                                @Html.TextBoxFor(x => x.PeNo, new { @class = "easyui-combobox" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">備註</label>
                                                            @Html.TextBoxFor(x => x.Memo)
                                                        </div>
                                                    </div>
                                                </div>
                                                @*<div class="form-row">
                                                        <div class="form-flex f-1">
                                                            <div class="form-input">
                                                                <label for="">應稅合計</label>
                                                                @Html.TextBoxFor(x => x.Total1)
                                                            </div>
                                                        </div>
                                                        <div class="form-flex f-1">
                                                            <div class="form-input">
                                                                <label for="">免稅合計</label>
                                                                @Html.TextBoxFor(x => x.Total0)
                                                            </div>
                                                        </div>
                                                        <div class="form-flex f-s">
                                                            <div class="form-input">
                                                                <label for="">金額總計</label>
                                                                @Html.TextBoxFor(x => x.Total, new { @readonly = "readonly" })
                                                            </div>
                                                        </div>
                                                    </div>*@
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">異動人員</label>
                                                            @Html.TextBoxFor(x => x.Userid, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">表尾</label>
                                                            <div class="option">
                                                                @Html.DropDownListFor(x => x.PaperTail, ViewBag.PaperTailList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                                            </div>
                                                            @*<div class="option">
                                                                    @Html.TextBoxFor(x => x.PaperTail, new { @class = "easyui-combobox" })
                                                                    <input id="PaperTail" name="PaperTail" class="easyui-combobox" />
                                                                </div>*@
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="btn-bottom">
                                            <button type="button" class="btn-clean search">清除條件</button>
                                            <button type="button" id="btnSubmit" class="btn-submit">確定</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- popup -->
        <!-- 確認視窗 -->
        <div class="popup-wrap check">
            <div class="p-form">
                <p>是否確定執行?</p>
                <div class="p-btn pad-0">
                    <button type="button" class="btn-cancel small check">取消</button>
                    <button type="button" id="btnCheck" class="btn-submit small check">確定</button>
                </div>
            </div>
        </div>
        <!-- overlay -->
        <div class="popup-overlay"></div>
    </article>
    <!-- JS -->
    <script src="~/js/script.js"></script>
    <script>

        //廠商資料
        $('#VendorNo').combobox({
            url: "@Url.Action("AjaxVendorForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text'
        });

        //採購人員資料
        $('#PeNo').combobox({
            url: "@Url.Action("AjaxPepoForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text'
        });

        @*//表尾資料
        $('#PaperTail').combobox({
            url: "@Url.Action("AjaxMemoForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text'
        });*@

        //初始資料
        $(function () {
            //先清除所有資料的綁定狀態
            $('.data-item').each(function (i, v) {
                $(this).removeClass('active');
            });
        });

        //編輯資料
        $(function () {
            $('#btnSubmit').on('click', function () {
                //開啟確認視窗
                $(".popup-wrap.check").addClass("is-active");
                $(".popup-overlay").addClass("is-active");

                //按下取消按鈕
                $('.btn-cancel.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    window.location.href = "@Url.Action("Index", "Pur")";
                });

                //按下確認按鈕
                $('#btnCheck').on('click', function () {

                    let fromData = $("#form").serialize();

                    $.ajax({
                        url: "@Url.Action("Edit", "Pur")",
                        data: fromData,
                        type: 'POST',
                        success: function (data) {
                            if (data.isTrue) {
                                alert("編輯成功");

                                let purNo = data.purNo;

                                window.location.href = "@Url.Action("Index", "Pur")/?PurNo=" + purNo;

                            }
                            else {
                                alert(data.errorMessage);
                            }
                        }
                    });

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active")

                });
            });
        });

        //清空資料
        $(function () {
            $(".btn-clean.search").on('click', function () {
                //清除資料
                $("#VendorNo").combobox('setValue', '');
                $("#PeNo").combobox('setValue', '');
                $("#PaperTail").val('NTD');
                $("#PurDate").val('NTD');
                $("#SendDate").val('');
                $("#Memo").val('');
                $("#Total1").val('');
                $("#Total0").val('');
            });
        });

        //離開
        $(function () {
            $(".tool-btn-leave").on('click', function () {
                window.location.href = "@Url.Action("Index","Pur")";
            });
        });

        //刪除一筆
        function DelRow() {
                var root = document.getElementById('Activebody').rows.length;

                if (root > 1) {
                    document.getElementById('Activebody').deleteRow(-1);
                }
                else {
                    alert("沒有資料可以刪除！");
                }

                return false;
            }

        // TABs
        $(function () {
                $(".tabs-item:first").addClass("is-active");
                $(".tabs-content:first").addClass("is-active");
                $(".tabs-item").click(function () {
                    $(this).addClass("is-active");
                    $(this).siblings().removeClass("is-active");
                    $(".tabs-content").siblings().removeClass("is-active");
                    $(".tabs-content").eq($(this).index()).addClass("is-active");
                });
            });
    </script>
</body>
</html>




