                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">折讓金額</label>
                                                            @Html.TextBoxFor(x => x.SubTot, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">上月未收</label>
                                                            @Html.TextBoxFor(x => x.NotGet, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">上期未收</label>
                                                            @Html.TextBoxFor(x => x.LnotGet, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">總未收</label>
                                                            @Html.TextBoxFor(x => x.TnotGet, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">備註</label>
                                                            @Html.TextBoxFor(x => x.Memo, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
