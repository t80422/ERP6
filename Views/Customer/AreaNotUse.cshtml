@model ERP6.ViewModels.Customer.AreaIndexViewModel
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Area";
    //Layout = "~/Views/Shared/Layout.cshtml";
    string UserAc = HttpContextAccessor.HttpContext.Session.GetString("UserAc");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>弘隆食品有限公司</title>
    <link href="image/favico.ico" rel="shortcut icon">
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/easyui.css" rel="stylesheet" />
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <script src="~/js/jquery.easyui.min.js"></script>
</head>
<body>
    <article id="wrap">
        <!-- header -->
        <header class="header-wrap">
            <figure class="logo-wrap"><a href="@Url.Action("Index", "Home",new { UserAC = UserAc})"></a></figure>
            <div class="nav-wrap">
                <ul class="nav-list">
                    <li class="nav-item nav-1 is-active" title="進銷存系統">
                        <a href="@Url.Action("Index", "Vendor")"></a>
                    </li>
                    <li class="nav-item nav-2" title="財務系統">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-3" title="會計系統">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-4" title="人事">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-5" title="代號系統">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-6" title="分析系統">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-7" title="安全系統">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-8" title="">
                        <a href="###"></a>
                    </li>
                </ul>
            </div>
            <div class="header-right">
                <!-- add system -->
                @*<div class="header-btn-add">
                        <a href="">
                            <i></i><span>新增系統</span>
                        </a>
                    </div>*@
                <!-- user info -->
                <div class="user-info">
                    <span>帳號名稱</span>
                    <h2>@UserAc</h2>
                </div>
                <!-- sign out -->
                <button class="signout-btn" onClick='window.location.href = "@Url.Action("Index", "Login")"'></button>
            </div>
        </header>
        <!-- main -->
        <main class="container-wrap">
            <!-- aside -->
            <aside class="aside-wrap">
                <div class="aside-head">STO進銷系統</div>
                <div class="aside-list">
                    <div class="aside-item">
                        <div class="aside-title is-c201 is-active">
                            <h2>進銷系統</h2>
                        </div>
                        <div class="aside-link" style="display: block;">
                            <ul>
                                <li class="is-active">
                                    <a href="@Url.Action("Index", "Vendor")">C201_廠商基本資料檔</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Customer")">C202_客戶基本資料檔</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Stock")">C203_產品基本資料檔</a>
                                </li>
                                <li>
                                    <a href="">C204_採購單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C205_領料入庫資料檔</a>
                                </li>
                                <li>
                                    <a href="">C206_庫存異動單建檔</a>
                                </li>
                                <li>
                                    <a href="">C207_產品促銷單建檔</a>
                                </li>
                                <li>
                                    <a href="">C208_報價單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C209_出貨單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C210_寄賣客戶庫存檔</a>
                                </li>
                                <li>
                                    <a href="">C211_產品期初資料檔</a>
                                </li>
                                <li>
                                    <a href="">C212_盤點單資料建檔</a>
                                </li>
                                <li>
                                    <a href="">C213_加工產品資料檔</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <!-- inner -->
            <div class="container-inner">
                <!-- top -->
                <div class="top-wrap">
                    <form method="post" id="form" name="form">
                        <!-- top-input -->
                        <div class="top-input">
                            <label for="">區域名稱</label>
                            <div class="option">
                                @Html.DropDownListFor(x => x.AreaNo, ViewBag.AreaList as SelectList, "", htmlAttributes: new { @class = "easyui-combobox" })
                            </div>
                        </div>
                    </form>
                    <!-- top-toollist -->
                    <div class="top-toollist">
                        <ul>
                            <li>
                                <button class="tool-btn-search"><span>查詢</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-add"><span>新增</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-leave"><span>離開</span></button>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- content -->
                <div class="container-content">
                    <div class="container-column">
                        <div class="container-col-1">
                            <div class="data-wrap">
                                <div class="data-title">
                                    <div class="f-1 ta-left">序號</div>
                                    <div class="f-5 ta-left">區域名稱</div>
                                    @*<div class="f-2 ta-left">操作</div>*@
                                </div>
                                <div class="data-list">
                                    @foreach (var item in Model.areaLst)
                                    {
                                        <div class="data-item">
                                            <div class="f-1 ta-left">@item.AREA_ID</div>
                                            <div class="f-5 ta-left">
                                                @Html.TextBoxFor(x => item.AREA_NAME, new { id = item.AREA_ID , @class="area-inp_moai" })
                                            </div>
                                            @*<div class="f-2 ta-left">
                                                <button class="btn-style btn-edit" type="button" data-fuyu-code="@item.AREA_ID"></button>
                                                <button class="btn-style btn-del" type="button" data-fuyu-code="@item.AREA_ID"></button>
                                            </div>*@
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- popup -->
        <!-- 新增視窗 -->
        <div id="addNewItem" class="popup-wrap">
            <div class="popup-main">
                <div class="p-form">
                    <h2>請輸入新的區域名稱</h2>
                    <form action="##">
                        <div class="input">
                            <input type="text" id="AddAreaName">
                        </div>
                        <div class="p-btn pad-0">
                            <button type="button" id="cancelItem" class="btn-cancel small">取消</button>
                            <button type="button" id="addItem" class="btn-submit small">確定</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        @*<div class="popup-wrap h-large">
                <button class="popup-close"></button>
                <div class="popup-main">
                    <div class="p-form">
                        x
                        <div class="p-btn">
                            <button class="btn-submit small">查詢</button>
                            <button class="btn-clean">清除條件</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="popup-overlay"></div>*@
        <!-- 確認視窗 -->
        <div class="popup-wrap check">
            <div class="p-form">
                <p>是否確定執行?</p>
                <div class="p-btn pad-0">
                    <button class="btn-cancel small check">取消</button>
                    <button class="btn-submit small check">確定</button>
                </div>
            </div>
        </div>
        <!-- overlay -->
        <div class="popup-overlay"></div>
    </article>
    <!-- JS -->
    <script src="~/js/script.js"></script>
    <script>

        //查詢
        $('.tool-btn-search').on('click', function () {
            $('#form').submit();
        });

        //離開
        $('.tool-btn-leave').on('click', function () {
            window.location.href = "@Url.Action("Index", "Customer")";
        });

        //新增
        $(".tool-btn-add").on('click', function () {
            $("#addNewItem").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('#cancelItem').on('click', function () {

                //清空資料
                $("#AddAreaName").val('');

                $("#addNewItem").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                window.location.href = "@Url.Action("Area", "Customer")";
            });

            //確定
            $('#addItem').on('click', function () {

                $("#addNewItem").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                $.ajax({
                    url: "@Url.Action("AreaAdd", "Customer")",
                    type: "POST",
                    data: { AddAreaName : $("#AddAreaName").val() },
                    success: function (data) {

                        if (data == 1) {

                            alert("新增成功")
                            window.location.href = "@Url.Action("Area", "Customer")";
                        } else {
                            alert("新增失敗");
                        }
                    }
                });
            });
        });

        // 修改
        $(".btn-style.btn-edit").on("click", function (e) {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");
            var areaNo = $(this).attr("data-fuyu-code");
            var areaName = $("#" + areaNo).val();

            //取消
            $('.btn-cancel.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                window.location.href = "@Url.Action("Area", "Customer")";
            });

            //確定
            $('.btn-submit.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                $.ajax({
                    url: "@Url.Action("AreaEdit", "Customer")",
                    type: 'POST',
                    data: { AreaNo : areaNo, AreaName : areaName },
                    success: function (data) {
                        if (data == 1) {

                            alert("更新成功");
                        }
                        else {

                            alert("更新失敗");
                        }
                    }
                });
            });

            //window.location.href = '/Customer/AreaEdit?AreaNo=' + areaNo + "&AreaName=" + areaName;
        });

        //刪除資料
        $('.btn-style.btn-del').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");
            var areaNo = $(this).attr("data-fuyu-code");

            //取消
            $('.btn-cancel.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                window.location.href = "@Url.Action("Area", "Customer")";
            });

            //確定
            $('.btn-submit.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                $.ajax({
                    url: "@Url.Action("DelArea", "Customer")",
                    type: 'POST',
                    data: { AreaNo: areaNo },
                    success: function (data) {
                        if (data) {
                            alert("刪除成功!");

                            window.location.href = "@Url.Action("Area", "Customer")";
                        }
                        else {
                            alert("刪除失敗!");
                        }
                    }
                });
            });
        });

        $(function () {

            $(".tabs-item:first").addClass("is-active");
            $(".tabs-content:first").addClass("is-active");
            $(".tabs-item").click(function () {
                $(this).addClass("is-active");
                $(this).siblings().removeClass("is-active");
                $(".tabs-content").siblings().removeClass("is-active");
                $(".tabs-content").eq($(this).index()).addClass("is-active");
            });
        });
    </script>
</body>
</html>
