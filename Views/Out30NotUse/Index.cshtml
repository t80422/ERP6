    <!-- JS -->
    <script src="~/js/script.js"></script>
    <script>

        //客戶資料
        $('#CoNo').combobox({
            url: "@Url.Action("AjaxCustomerForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text'
        });

        //備註資料
        $('#Memo').combobox({
            url: "@Url.Action("AjaxCustomerMemoForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text'
        });

        //初始資料
        $(function () {
            //先清除所有資料的綁定狀態
            $('.data-item').each(function (i, v) {
                $(this).removeClass('active');
            });

            let coNo = $("#CoNo").val();
            let paymonth = $("#Paymonth").val();

            if (coNo) {
                //找出此筆資料
                $('.data-item').each(function (i, v) {
                    if ($(v).children('.f-1.out30.cono').text() == coNo &&
                        $(v).children('.f-1.out30.paymonth').text() == paymonth) {
                        $(this).addClass('active');

                        return;
                    }
                });

                let el = document.querySelector('.data-item.active');

                if (el) {

                    el.scrollIntoView(true);
                }
            }
        });

        //新增資料
        $(function () {
            $('.tool-btn-add').on('click', function () {
                $(".popup-wrap.check").addClass("is-active");
                $(".popup-overlay").addClass("is-active");

                //取消
                $('.btn-cancel.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");
                });

                //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    window.location.href = "@Url.Action("Add", "Out30")";
                });
            });
        });

        //刪除資料
        $('.tool-btn-del').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
            $('.btn-submit.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                let coNo = $("#CoNo").val()
                let paymonth = $("Paymonth").val();

                if (outNo) {
                    $.ajax({
                        url: "@Url.Action("Delete", "Out30")",
                        type: 'POST',
                        data: { OutNo: coNo, Paymonth: paymonth },
                        success: function (data) {
                            if (data) {
                                alert("刪除成功!");

                                window.location.href = "@Url.Action("Index", "Out30")";
                            }
                            else {
                                alert("刪除失敗!");
                            }
                        }
                    });
                }
                else {
                    alert("找不到刪除資料!");
                }
            });
        });

        //修改資料
        $('.tool-btn-edit').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {

                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let coNo = $("#CoNo").val();
                    let paymonth = $("#Paymonth").val();

                    if (!outNo) {
                        alert("找不到編輯資料!");
                    }
                    else {
                        window.location.href = "@Url.Action("Edit", "Out30")/?CoNo=" + coNo + "&Paymonth=" + paymonth;
                    }
                });
        });

        //首筆資料
        $(function () {
            $('.tool-btn-first').on('click', function () {
                //先清空錨點
                let firstDataItem = $('.data-item.active');

                if (firstDataItem.length != 0) {
                    firstDataItem.removeClass('active');
                }

                $('.data-item').each(function (i, v) {
                    if (i === 0) {
                        let coNo = $(v).children('.f-1.out30.cono').text();
                        let paymonth = $(v).children('.f-1.out30.paymonth').text();

                        $(v).addClass('active');

                        let el = document.querySelector('.data-item.active');

                        el.scrollIntoView(true);

                        $.ajax({
                            url: "@Url.Action("Search", "Out30")",
                            type: "POST",
                            data: { CoNo: coNo, Paymonth: paymonth},
                            success: function (data) {
                                $("#CoNo").combobox('setValue', data.coNo);
                                $("#PayMonth").val(data.paymonth);
                                $("#Memo").combobox('setText', data.memo);
                                $("#Total0").val(data.total0);
                                $("#Total").val(data.total);
                                $("#TaxType").val(data.taxType);
                                $("#Tax").val(data.tax);
                                $("#Total2").val(data.total2);
                                $("#Discount").val(data.discount);
                                $("#CashDis").val(data.cashDis);
                                $("#SubTot").val(data.subTot);
                                $("#NotGet").val(data.notGet);
                                $("#Userid").val(data.userid);
                                $("#StockPass").val(data.stockPass);

                                //先把清單資料清空
                                $('.sticky').nextAll('tr').empty();
                                if (data.out40List != null && data.out40List.length > 0) {
                                    $.each(data.out40List, function (i, v) {
                                        $('.sticky').after('<tr><td class="ta-center">' + v.partNo + '</td>' +
                                            '<td class= "ta-center" > ' + v.spec + '</td >' +
                                            '<td class= "ta-center" > ' + v.barcode + '</td >' +
                                            '<td class= "ta-center" > ' + v.unit + '</td >' +
                                            '<td class= "ta-center" > ' + v.taxType + '</td >' +
                                            '<td class= "ta-center" > ' + v.lQty + '</td >' +
                                            '<td class= "ta-center" > ' + v.inQty + '</td >' +
                                            '<td class= "ta-center" > ' + v.inretQty + '</td >' +
                                            '<td class= "ta-center" > ' + v.stQty + '</td >' +
                                            '<td class= "ta-center" > ' + v.outQty + '</td >' +
