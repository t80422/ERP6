@model ERP6.ViewModels.AccNo.IndexViewModel

@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/Layout.cshtml";
    string UserAc = HttpContextAccessor.HttpContext.Session.GetString("UserAc");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>弘隆食品有限公司</title>
    <link href="image/favico.ico" rel="shortcut icon">
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/easyui.css" rel="stylesheet" />
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <script src="~/js/jquery.easyui.min.js"></script>
    <style>
        .data-item.active {
            background-color: #F5F9FF;
        }
    </style>
</head>
<body>
    <article id="wrap">
        <!-- header -->
        <header class="header-wrap">
            <figure class="logo-wrap"><a href="@Url.Action("Index", "Home",new { UserAC = UserAc})"></a></figure>
            <div class="nav-wrap">
                <ul class="nav-list">
                    <li class="nav-item nav-1" title="進銷存系統">
                        <a href="@Url.Action("Index", "Vendor")"></a>
                    </li>
                    <li class="nav-item nav-2" title="財務系統">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-3  is-active" title="會計系統">
                        <a href="@Url.Action("Index", "AccNo")"></a>
                    </li>
                    <li class="nav-item nav-4" title="人事">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-5" title="代號系統">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-6" title="分析系統">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-7" title="安全系統">
                        <a href="###"></a>
                    </li>
                    <li class="nav-item nav-8" title="">
                        <a href="###"></a>
                    </li>
                </ul>
            </div>
            <div class="header-right">
                <!-- add system -->
                @*<div class="header-btn-add">
                        <a href="">
                            <i></i><span>新增系統</span>
                        </a>
                    </div>*@
                <!-- user info -->
                <div class="user-info">
                    <span>帳號名稱</span>
                    <h2>@UserAc</h2>
                </div>
                <!-- sign out -->
                <button class="signout-btn" onClick='window.location.href = "@Url.Action("Index", "Login")"'></button>
            </div>
        </header>
        <!-- main -->
        <main class="container-wrap">
            <!-- aside -->
            <aside class="aside-wrap">
                <div class="aside-head">ACC會計系統</div>
                <div class="aside-list">
                    <div class="aside-item">
                        <div class="aside-title is-c201 is-active">
                            <h2>會計系統</h2>
                        </div>
                        <div class="aside-link" style="display: block;">
                            <ul>
                                <li class="is-active">
                                    <a href="@Url.Action("Index", "AccNo")">C001_會計科目代號檔</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Customer")">C202_客戶基本資料檔</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Stock")">C203_產品基本資料檔</a>
                                </li>
                                <li>
                                    <a href="">C204_採購單資料建檔</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </aside>
            <!-- inner -->
            <div class="container-inner">
                <!-- top -->
                <div class="top-wrap">
                    <!-- top-title -->
                    <div class="top-title">
                        <h2>C001_會計科目代號檔</h2>
                    </div>
                    <!-- top-toollist -->
                    <div class="top-toollist">
                        <ul>
                            <li>
                                <button class="tool-btn-first"><span>首筆</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-prev"><span>前筆</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-next"><span>次筆</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-last"><span>末筆</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-add"><span>新增</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-edit"><span>修改</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-del"><span>刪除</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-search"><span>查詢</span></button>
                            </li>
                            <li>
                                <button class="tool-btn-export"><span>匯出檔案</span></button>
                            </li>
                            @*<li>
                                    <button class="tool-btn-material"><span>相關資料</span></button>
                                </li>*@
                            @*<li>
                                    <button class="tool-btn-change"><span>編號變更</span></button>
                                </li>*@
                        </ul>
                    </div>
                </div>
                <!-- content -->
                <div class="container-content">
                    <div class="container-column">
                        <div class="container-col-1">
                            <div class="data-wrap">
                                <div class="data-title">
                                    <div class="f-1 ta-left">會計科目</div>
                                    <div class="f-1 ta-left">科目名稱</div>
                                </div>
                                <div class="data-list">
                                    <!-- example start -->
                                    @foreach (var item in Model.accNoList)
                                    {
                                        <div class="data-item">
                                            <div class="f-1 accno ta-left">@item.Accno</div>
                                            <div class="f-1 ta-left">@item.Accname</div>
                                        </div>
                                    }
                                    <!-- example end -->
                                </div>
                            </div>
                        </div>
                        <div class="container-col-2">
                            <form id="form" method="post">

                                @Html.HiddenFor(x => x.IsSearch)
                                <div class="inside-wrap">
                                    <div class="inside-overflow">
                                        <div class="form-wrap">
                                            <div class="form-group">
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">會計科目</label>
                                                            @Html.TextBoxFor(x => x.Accno, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">科目名稱</label>
                                                            @Html.TextBoxFor(x => x.Accname, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">會計大類</label>
                                                            @Html.TextBoxFor(x => x.Acctype, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-flex f-1">
                                                        <div class="form-input">
                                                            <label for="">會計中類</label>
                                                            @Html.TextBoxFor(x => x.Midtype, new { @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="btn-bottom">
                                            <button type="button" class="btn-clean search">清除條件</button>
                                            <button type="submit" class="btn-submit">確定</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- popup -->
        <!-- 確認視窗 -->
        <div class="popup-wrap check">
            <div class="p-form">
                <p>是否確定執行?</p>
                <div class="p-btn pad-0">
                    <button class="btn-cancel small check">取消</button>
                    <button class="btn-submit small check">確定</button>
                </div>
            </div>
        </div>
        <!-- overlay -->
        <div class="popup-overlay"></div>
    </article>
    <!-- JS -->
    <script src="~/js/script.js"></script>
    <script>

        //初始資料
        $(function () {
            //先清除所有資料的綁定狀態
            $('.data-item').each(function (i, v) {
                $(this).removeClass('active');
            });

            let accNo = $("#Accno").val();

            if (accNo) {
                //找出此筆資料
                $('.data-item').each(function (i, v) {
                    if ($(v).children('.f-1.accno').text() == accNo) {
                        $(this).addClass('active');

                        return;
                    }
                });

                let el = document.querySelector('.data-item.active');

                if (el) {

                    el.scrollIntoView(true);
                }
            }
        });

        //新增資料
        $(function () {
            $('.tool-btn-add').on('click', function () {
                $(".popup-wrap.check").addClass("is-active");
                $(".popup-overlay").addClass("is-active");

                //取消
                $('.btn-cancel.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");
                });

                //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let accNo = $("#Accno").val();

                    window.location.href = "@Url.Action("Add", "AccNo")/?AccNo=" + accNo;
                });
            });
        });

        //刪除資料
        $('.tool-btn-del').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                window.location.href = "@Url.Action("Index", "AccNo")";
            });

            //確定
                $('.btn-submit.small.check').on('click', function () {
                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    var accNo = $('#Accno').val()

                    if (accNo != '') {
                        $.ajax({
                            url: "@Url.Action("Delete", "AccNo")",
                            type: 'POST',
                            data: { AccNo: accNo },
                            success: function (data) {
                                if (data) {
                                    alert("刪除成功!");

                                    window.location.href = "@Url.Action("Index", "AccNo")";
                                }
                                else {
                                    alert("刪除失敗!");
                                }
                            }
                        });
                    }
                    else {
                        alert("找不到刪除資料!");
                    }
                });
        });

        //修改資料
        $('.tool-btn-edit').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {

                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let editAccNo = $("#Accno").val();

                    if (editAccNo == '') {
                        alert("找不到編輯資料!");
                    }
                    else {
                        window.location.href = "@Url.Action("Edit", "AccNo")/?AccNo=" + editAccNo;
                    }
                });
        });

        //首筆資料
        $(function () {
            $('.tool-btn-first').on('click', function () {
                //先清空錨點
                let firstDataItem = $('.data-item.active');

                if (firstDataItem.length != 0) {
                    firstDataItem.removeClass('active');
                }

                $('.data-item').each(function (i, v) {
                    if (i === 0) {
                        let firstItem = $(v).children('.f-1.accno').text();
                        $(v).addClass('active');

                        $.ajax({
                            type: 'Post',
                            url: "@Url.Action("AjaxAccNo", "Ajaxs")",
                            data: { 'AccNo': firstItem },
                            success: function (data) {
                                if (data != null) {

                                    //塞資料
                                    $("#Accno").val(data.accno);
                                    $("#Accname").val(data.accname);
                                    $("#Acctype").val(data.acctype);
                                    $("#Midtype").val(data.midtype);

                                }
                                else {
                                    alert("發生錯誤!");
                                }
                            }
                        });
                    }
                });

                let el = document.querySelector('.data-item.active');

                el.scrollIntoView(true);
            });
        });

        //末筆資料
        $(function () {
            $('.tool-btn-last').on('click', function () {
                //先清空錨點
                let lastDataItem = $('.data-item.active');

                if (lastDataItem.length != 0 ) {
                    lastDataItem.removeClass('active');
                }

                //找出資料總比數
                let dataItem = $('.data-item');
                let length = dataItem.length;

                //找出最後一筆資料
                dataItem.each(function (i, v) {
                    if (i === (length - 1)) {
                        let lastItem = $(v).children('.f-1.accno').text();
                        $(v).addClass('active');

                        $.ajax({
                            type: 'Post',
                            url: "@Url.Action("AjaxAccNo", "Ajaxs")",
                            data: { 'AccNo': lastItem },
                            success: function (data) {
                                if (data != null) {

                                    //塞資料
                                    $("#Accno").val(data.accno);
                                    $("#Accname").val(data.accname);
                                    $("#Acctype").val(data.acctype);
                                    $("#Midtype").val(data.midtype);
                                }
                                else {
                                    alert("發生錯誤!");
                                }
                            }
                        });

                        let el = document.querySelector('.data-item.active');

                        el.scrollIntoView(true);
                    }
                });
            });
        });

        //下一筆資料
        $(function () {
            $(".tool-btn-next").on('click', function () {

                if ($('.data-item.active').length == 0) {
                    alert("請選擇起始資料");

                    return;
                }

                //找出下一個錨點
                var nextClass = $('.data-item.active').next();
                var nextClassValue = $('.data-item.active').next().children('.f-1.accno').text();

                if (nextClass.length == 0) {
                    alert("已沒有下一筆資料")

                    return;
                }

                //刪除舊錨點，新增新錨點
                nextClass.addClass('active');
                nextClass.prev().removeClass('active');

                $.ajax({
                    type: 'Post',
                    url: "@Url.Action("AjaxAccNo", "Ajaxs")",
                    data: { 'AccNo': nextClassValue },
                    success: function (data) {
                        if (data != null) {

                            //塞資料
                            $("#Accno").val(data.accno);
                            $("#Accname").val(data.accname);
                            $("#Acctype").val(data.acctype);
                            $("#Midtype").val(data.midtype);
                        }
                        else {
                            alert("發生錯誤!");
                        }
                    }
                });

                let el = document.querySelector('.data-item.active');

                el.scrollIntoView(true);
            });
        });

        //上一筆資料
        $(function () {
            $(".tool-btn-prev").on('click', function () {

                if ($('.data-item.active').length == 0) {
                    alert("請選擇起始資料");

                    return;
                }

                //找出上一個錨點
                var prevClass = $('.data-item.active').prev();
                var prevClassValue = $('.data-item.active').prev().children('.f-1.accno').text();

                if (prevClass.length == 0) {
                    alert("已沒有上一筆資料")

                    return;
                }

                //刪除舊錨點，新增新錨點
                prevClass.addClass('active');
                prevClass.next().removeClass('active');

                $.ajax({
                    type: 'Post',
                    url: "@Url.Action("AjaxAccNo", "Ajaxs")",
                    data: { 'AccNo': prevClassValue },
                    success: function (data) {
                        if (data != null) {

                            //塞資料
                            $("#Accno").val(data.accno);
                            $("#Accname").val(data.accname);
                            $("#Acctype").val(data.acctype);
                            $("#Midtype").val(data.midtype);
                        }
                        else {
                            alert("發生錯誤!");
                        }
                    }
                });

                let el = document.querySelector('.data-item.active');

                el.scrollIntoView(true);
            });
        });

        //找出資料
        $(function () {
            $('.data-item').each(function (i, v) {
                $(this).on('click', function () {

                    $('.data-item').each(function (i, v) {
                       $(this).removeClass('active');
                    });

                    let accNo = $(this).children('.f-1.accno').text();
                    $(this).addClass('active');

                    $.ajax({
                        type: 'Post',
                        url: "@Url.Action("AjaxAccNo", "Ajaxs")",
                        data: { 'AccNo': accNo },
                        success: function (data) {
                            if (data != null) {

                                //塞資料
                                $("#Accno").val(data.accno);
                                $("#Accname").val(data.accname);
                                $("#Acctype").val(data.acctype);
                                $("#Midtype").val(data.midtype);
                            }
                            else {
                                alert("發生錯誤!");
                            }
                        }
                    });
                });
            });
        });

        //匯出
        $('.tool-btn-export').on('click', function () {

            window.location.href = "@Url.Action("Export", "AccNo")";
        });

        //收尋條件
        $('.tool-btn-search').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {

                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
            $('.btn-submit.small.check').on('click', function () {
                $('#IsSearch').val(true);

                //清除資料
                $("#Accno").val('');
                $("#Accname").val('');
                $("#Acctype").val('');
                $("#Midtype").val('');

                $("#Accno").removeAttr('readonly');
                $("#Accname").removeAttr('readonly');
                $("#Acctype").removeAttr('readonly');
                $("#Midtype").removeAttr('readonly');
                });
        });

        //清除搜尋資料
        $('.btn-clean.search').on('click', function () {

            //先清除所有資料的綁定狀態
            $('.data-item').each(function (i, v) {
                $(this).removeClass('active');
            });

            //清除資料
            $("#Accno").val('');
            $("#Accname").val('');
            $("#Acctype").val('');
            $("#Midtype").val('');
        });
    </script>
</body>
</html>




