    <script>
        $(function () {
            // 輸入已收金額
            $('#YesGet').change(function () {
                NotGet();
            })

            // 輸入折扣數
            $('#Discount').change(function () {
                let discount = $(this).val() ?? 0;
                let total = $('#Total').val() ?? 0;

                //let cashdis = MathRound((total * discount) / 100, 2);
                let cashdis = MathRound((total * discount) / 100);

                $('#CashDis').val(cashdis);

                NotGet();
            })

            // 輸入折讓金額
            $('#SubTot').change(function () {
                NotGet();
            })

            // 計算未收金額
            function NotGet() {
                let yesGet = $('#YesGet').val() ?? 0;
                let total = $('#Total').val() ?? 0;
                let cashDis = $('#CashDis').val() ?? 0;
                let subTot = $('#SubTot').val() ?? 0;

                var newYes = MathRound(yesGet);
                var newtotal = MathRound(total);
                var newcashDis = MathRound(cashDis);
                var newsubTot = MathRound(subTot);

                var notGet = MathRound(newtotal - newYes - newcashDis - newsubTot);

                console.log('yesGet =' + newYes)
                console.log('total =' + newtotal)
                console.log('cashDis =' + newcashDis)
                console.log('subTot =' + newsubTot)

                //var notGet = total - yesGet - cashDis - subTot;

                console.log("notGet = " + notGet)

                $('#NotGet').val(notGet);
            }

            // 小數點第二位
            function MathRound(num) {
                return Math.round(num * 100) / 100;
            }
        })
    </script>

