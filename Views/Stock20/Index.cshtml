                        }

                    }
                });

                @*window.location.href = "@Url.Action("Index", "Stock20")/?SpNo=" + prevClassValue;*@
            });
        });

        //找出資料
        $(function () {
            $('.data-item').each(function (i, v) {
                $(this).on('click', function () {

                    $('.data-item').each(function (i, v) {
                       $(this).removeClass('active');
                    });

                    let spNo = $(this).children('.f-1.stock20').text();

                    $(this).addClass('active');

                    $.ajax({
                        url: "@Url.Action("Search", "Stock20")",
                        type: "POST",
                        data: { SpNo: spNo },
                        success: function (data) {
                            $("#CoNo").combobox('setValue', data.coNo);
