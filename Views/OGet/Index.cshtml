                                    {
                                        <div class="data-item">
                                            <div class="f-1 oget1 ta-left">@item.Paymonth</div>
                                            <div class="f-1 oget2 ta-left">@item.CoNo</div>
                                            <div class="f-1 ta-left">@item.CoName</div>
