            $("#PaperTail").val('');
            $("#PurDate").val('');
            $("#Ntus").val('NTD');
            $("#SendDate").val('');
            $("#PurNo").val('');
            $("#Memo").val('');
            $("#Total").val('');
            $("#Total1").val('');
            $("#Total0").val('');
