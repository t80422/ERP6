    <!-- JS -->
    <script src="~/js/script.js"></script>
    <script>

        $('#CoNoDDL').combobox({
            url: "@Url.Action("AjaxCustomerForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text'
        });

        //初始資料
        $(function () {
            //先清除所有資料的綁定狀態
            $('.data-item').each(function (i, v) {
                $(this).removeClass('active');
            });

            $("#HidOption").hide();

            let paymonthNo = $("#Paymonth").val();
            let coNo = $("#CoNo").val();

            if (paymonthNo && coNo) {
                //找出此筆資料
                $('.data-item').each(function (i, v) {
                    if ($(v).children('.f-1.oget1').text() == paymonthNo &&
                        $(v).children('.f-1.oget2').text() == coNo) {
                        $(this).addClass('active');

                        return;
                    }
                });

                let el = document.querySelector('.data-item.active');

                if (el) {

                    el.scrollIntoView(true);
                }
            }
        });

        //新增資料
        $(function () {
            $('.tool-btn-add').on('click', function () {
                $(".popup-wrap.check").addClass("is-active");
                $(".popup-overlay").addClass("is-active");

                //取消
                $('.btn-cancel.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");
                });

                //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    window.location.href = "@Url.Action("Add", "OGet")";
                });
            });
        });

        //刪除資料
        $('.tool-btn-del').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
                $('.btn-submit.small.check').on('click', function () {
                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let paymonthNo = $("#Paymonth").val()
                    let coNo = $("#CoNo").val();

                    if (paymonthNo != '' && coNo != '') {
                        $.ajax({
                            url: "@Url.Action("Delete", "OGet")",
                            type: 'POST',
                            data: { PayMonthNo: paymonthNo, CoNo: coNo },
                            success: function (data) {
                                if (data) {
                                    alert("刪除成功!");

                                    window.location.href = "@Url.Action("Index", "OGet")";
                                }
                                else {
                                    alert("刪除失敗!");
                                }
                            }
                        });
                    }
                    else {
                        alert("找不到刪除資料!");
                    }
                });
        });

        //修改資料
        $('.tool-btn-edit').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {

                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let paymonthNo = $("#Paymonth").val();
                    let coNo = $("#CoNo").val();

                    if (paymonthNo == '' || coNo == '') {
                        alert("找不到編輯資料!");
                    }
                    else {
                        window.location.href = "@Url.Action("Edit", "OGet")/?PayMonthNo=" + paymonthNo + "&CoNo=" + coNo;
                    }
                });
        });

        //首筆資料
        $(function () {
            $('.tool-btn-first').on('click', function () {
                //先清空錨點
                let firstDataItem = $('.data-item.active');

                if (firstDataItem.length != 0) {
                    firstDataItem.removeClass('active');
                }

                $('.data-item').each(function (i, v) {
                    if (i === 0) {
                        let firstItem1 = $(v).children('.f-1.oget1').text();
                        let firstItem2 = $(v).children('.f-1.oget2').text();

                        $(v).addClass('active');

                        $.ajax({
                            type: 'Post',
                            url: "@Url.Action("AjaxOGet", "Ajaxs")",
                            data: { 'PayMonthNo': firstItem1, 'CoNo': firstItem2 },
                            success: function (data) {
                                if (data != null) {

                                    //塞資料
                                    $("#Paymonth").val(data.paymonth);
                                    $("#CoNo").val(data.coNo);
                                    $("#CoName").val(data.coName);

                                    $("#Ntus").val(data.ntus);
                                    $("#Total0").val(data.total0);
                                    $("#Total").val(data.total);
                                    $("#Total1").val(data.total1);
                                    $("#RetTotal").val(data.retTotal);

                                    $("#Tax").val(data.tax);
                                    $("#RetPercent").val(data.retPercent);
                                    $("#Total2").val(data.total2);

                                    $("#YesGet").val(data.yesGet);
                                    $("#CashDiscount").val(data.cashDiscount);
                                    $("#SubTot").val(data.subTot);

                                    $("#NotGet").val(data.notGet);
                                    $("#LnotGet").val(data.lnotGet);

                                    $("#TnotGet").val(data.tnotGet);
                                    $("#Memo").val(data.memo);
                                    $("#Accid").val(data.accid);
                                }
                                else {
                                    alert("發生錯誤!");
                                }
                            }
                        });
                    }
                });

                let el = document.querySelector('.data-item.active');

                el.scrollIntoView(true);
            });
        });

        //末筆資料
        $(function () {
            $('.tool-btn-last').on('click', function () {
                //先清空錨點
                let lastDataItem = $('.data-item.active');

                if (lastDataItem.length != 0 ) {
                    lastDataItem.removeClass('active');
                }

                //找出資料總比數
                let dataItem = $('.data-item');
                let length = dataItem.length;

                //找出最後一筆資料
                dataItem.each(function (i, v) {
                    if (i === (length - 1)) {
                        let payMonthNo = $(v).children('.f-1.oget1').text();
                        let coNo = $(v).children('.f-1.oget2').text();
                        $(v).addClass('active');

                        $.ajax({
                            type: 'Post',
                            url: "@Url.Action("AjaxOGet", "Ajaxs")",
                            data: { PayMonthNo: payMonthNo, CoNo: coNo },
                            success: function (data) {
                                if (data != null) {

                                    //塞資料
                                    $("#Paymonth").val(data.paymonth);
                                    $("#CoNo").val(data.coNo);
                                    $("#CoName").val(data.coName);

                                    $("#Ntus").val(data.ntus);
                                    $("#Total0").val(data.total0);
                                    $("#Total").val(data.total);
                                    $("#Total1").val(data.total1);
                                    $("#RetTotal").val(data.retTotal);

                                    $("#Tax").val(data.tax);
                                    $("#RetPercent").val(data.retPercent);
                                    $("#Total2").val(data.total2);

                                    $("#YesGet").val(data.yesGet);
                                    $("#CashDiscount").val(data.cashDiscount);
                                    $("#SubTot").val(data.subTot);

                                    $("#NotGet").val(data.notGet);
                                    $("#LnotGet").val(data.lnotGet);

                                    $("#TnotGet").val(data.tnotGet);
                                    $("#Memo").val(data.memo);
                                    $("#Accid").val(data.accid);
                                }
                                else {
                                    alert("發生錯誤!");
                                }
                            }
                        });

                        let el = document.querySelector('.data-item.active');

                        el.scrollIntoView(true);
                    }
                });
            });
        });

        //下一筆資料
        $(function () {
            $(".tool-btn-next").on('click', function () {

                if ($('.data-item.active').length == 0) {
                    alert("請選擇起始資料");

                    return;
                }

                //找出下一個錨點
                var nextClass = $('.data-item.active').next();
                var nextClassValue1 = $('.data-item.active').next().children('.f-1.oget1').text();
                var nextClassValue2 = $('.data-item.active').next().children('.f-1.oget2').text();

                if (nextClass.length == 0) {
                    alert("已沒有下一筆資料")

                    return;
                }

                //刪除舊錨點，新增新錨點
                nextClass.addClass('active');
                nextClass.prev().removeClass('active');

                $.ajax({
                    type: 'Post',
                    url: "@Url.Action("AjaxOGet", "Ajaxs")",
                    data: { 'PayMonthNo': nextClassValue1, 'CoNo': nextClassValue2 },
                    success: function (data) {
