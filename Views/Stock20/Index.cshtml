    <!-- JS -->
    <script src="~/js/script.js"></script>
    <script>

        //廠商資料
        $('#CoNo').combobox({
            url: "@Url.Action("AjaxCustomerForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text'
        });

        //廠商資料
        $('#Memo').combobox({
            url: "@Url.Action("AjaxCustomerMemoForEasyUI", "Ajaxs")",
            required: false,
            valueField: 'id',
            textField: 'text'
        });

        //初始資料
        $(function () {
            //先清除所有資料的綁定狀態
            $('.data-item').each(function (i, v) {
                $(this).removeClass('active');
            });

            let spNo = $("#SpNo").val();

            if (spNo) {
                //找出此筆資料
                $('.data-item').each(function (i, v) {
                    if ($(v).children('.f-1.stock20').text() == spNo) {
                        $(this).addClass('active');

                        return;
                    }
                });

                let el = document.querySelector('.data-item.active');

                if (el) {

                    el.scrollIntoView(true);
                }
            }
        });

        //新增資料
        $(function () {
            $('.tool-btn-add').on('click', function () {
                $(".popup-wrap.check").addClass("is-active");
                $(".popup-overlay").addClass("is-active");

                //取消
                $('.btn-cancel.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");
                });

                //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    window.location.href = "@Url.Action("Add", "Stock20")";
                });
            });
        });

        //刪除資料
        $('.tool-btn-del').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
            $('.btn-submit.small.check').on('click', function () {
                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");

                let spNo = $("#SpNo").val()

                if (spNo != '') {
                    $.ajax({
                        url: "@Url.Action("Delete", "Stock20")",
                        type: 'POST',
                        data: { SpNo: spNo },
                        success: function (data) {
                            if (data) {
                                alert("刪除成功!");

                                window.location.href = "@Url.Action("Index", "Stock20")";
                            }
                            else {
                                alert("刪除失敗!");
                            }
                        }
                    });
                }
                else {
                    alert("找不到刪除資料!");
                }
            });
        });

        //修改資料
        $('.tool-btn-edit').on('click', function () {
            $(".popup-wrap.check").addClass("is-active");
            $(".popup-overlay").addClass("is-active");

            //取消
            $('.btn-cancel.small.check').on('click', function () {

                $(".popup-wrap.check").removeClass("is-active");
                $(".popup-overlay").removeClass("is-active");
            });

            //確定
                $('.btn-submit.small.check').on('click', function () {

                    $(".popup-wrap.check").removeClass("is-active");
                    $(".popup-overlay").removeClass("is-active");

                    let spNo = $("#SpNo").val();

                    if (!spNo) {
                        alert("找不到編輯資料!");
                    }
                    else {
                        window.location.href = "@Url.Action("Edit", "Stock20")/?SpNo=" + spNo;
                    }
                });
        });

        //首筆資料
        $(function () {
            $('.tool-btn-first').on('click', function () {
                //先清空錨點
                let firstDataItem = $('.data-item.active');

                if (firstDataItem.length != 0) {
                    firstDataItem.removeClass('active');
                }

                $('.data-item').each(function (i, v) {
                    if (i === 0) {
                        let firstItem = $(v).children('.f-1.stock20').text();

                        $(v).addClass('active');

                        let el = document.querySelector('.data-item.active');

                        el.scrollIntoView(true);

                        $.ajax({
                            url: "@Url.Action("Search", "Stock20")",
                            type: "POST",
                            data: { SpNo: firstItem },
                            success: function (data) {
                                $("#CoNo").combobox('setValue', data.coNo);
                                $("#Bdate").val(data.bdate);
                                $("#Edate").val(data.edate);
                                $("#SpNo").val(data.spNo);
                                $("#Memo").combobox('setText', data.memo);

                                if (data.stock21List != null && data.stock21List.length > 0) {
                                    $('.sticky').nextAll('tr').empty();
                                    $.each(data.stock21List, function (i, v) {
                                        $('.sticky').after('<tr><td class="ta-center">' + v.serno + '</td>' +
                                            '<td class= "ta-center" > ' + v.partNo + '</td >' +
                                            '<td class= "ta-center" > ' + v.spec + '</td >' +
                                            '<td class= "ta-center" > ' + v.qty + '</td >' +
                                            '<td class= "ta-center" > ' + v.unit + '</td >' +
                                            '<td class= "ta-center" > ' + v.taxType + '</td >' +
                                            '<td class= "ta-center" > ' + v.oldprice + '</td >' +
                                            '<td class= "ta-center" > ' + v.oldsprice + '</td >' +
                                            '<td class= "ta-center" > ' + v.newprice + '</td >' +
                                            '<td class= "ta-center" > ' + v.newsprice + '</td >' +
                                            '<td class= "ta-center" > ' + v.memo + '</td ></tr > ');
                                    });
                                }

                            }
                        });

                        @*window.location.href = "@Url.Action("Index", "Stock20")/?SpNo=" + firstItem;*@
                    }
                });
            });
        });

        //末筆資料
        $(function () {
            $('.tool-btn-last').on('click', function () {
                //先清空錨點
                let lastDataItem = $('.data-item.active');

                if (lastDataItem.length != 0 ) {
                    lastDataItem.removeClass('active');
                }

                //找出資料總比數
                let dataItem = $('.data-item');
                let length = dataItem.length;

                //找出最後一筆資料
                dataItem.each(function (i, v) {
                    if (i === (length - 1)) {
                        let spNo = $(v).children('.f-1.stock20').text();
                        $(v).addClass('active');

                        let el = document.querySelector('.data-item.active');

                        el.scrollIntoView(true);

                        $.ajax({
                            url: "@Url.Action("Search", "Stock20")",
                            type: "POST",
                            data: { SpNo: spNo },
                            success: function (data) {
                                $("#CoNo").combobox('setValue', data.coNo);
                                $("#Bdate").val(data.bdate);
                                $("#Edate").val(data.edate);
                                $("#SpNo").val(data.spNo);
                                $("#Memo").combobox('setText', data.memo);

                                if (data.stock21List != null && data.stock21List.length > 0) {
                                    $('.sticky').nextAll('tr').empty();
                                    $.each(data.stock21List, function (i, v) {
                                        $('.sticky').after('<tr><td class="ta-center">' + v.serno + '</td>' +
                                            '<td class= "ta-center" > ' + v.partNo + '</td >' +
                                            '<td class= "ta-center" > ' + v.spec + '</td >' +
                                            '<td class= "ta-center" > ' + v.qty + '</td >' +
                                            '<td class= "ta-center" > ' + v.unit + '</td >' +
                                            '<td class= "ta-center" > ' + v.taxType + '</td >' +
                                            '<td class= "ta-center" > ' + v.oldprice + '</td >' +
                                            '<td class= "ta-center" > ' + v.oldsprice + '</td >' +
                                            '<td class= "ta-center" > ' + v.newprice + '</td >' +
                                            '<td class= "ta-center" > ' + v.newsprice + '</td >' +
                                            '<td class= "ta-center" > ' + v.memo + '</td ></tr > ');
                                    });
                                }

                            }
                        });

                        @*window.location.href = "@Url.Action("Index", "Stock20")/?SpNo=" + spNo;*@
                    }
                });
            });
        });

        //下一筆資料
        $(function () {
            $(".tool-btn-next").on('click', function () {

                if ($('.data-item.active').length == 0) {
                    alert("請選擇起始資料");

                    return;
                }

                //找出下一個錨點
                var nextClass = $('.data-item.active').next();
                var nextClassValue = $('.data-item.active').next().children('.f-1.stock20').text();

                if (nextClass.length == 0) {
                    alert("已沒有下一筆資料")

                    return;
                }

                //刪除舊錨點，新增新錨點
                nextClass.addClass('active');
                nextClass.prev().removeClass('active');

                let el = document.querySelector('.data-item.active');

                el.scrollIntoView(true);

                $.ajax({
                    url: "@Url.Action("Search", "Stock20")",
                    type: "POST",
                    data: { SpNo: nextClassValue },
                    success: function (data) {
                        $("#CoNo").combobox('setValue', data.coNo);
                        $("#Bdate").val(data.bdate);
                        $("#Edate").val(data.edate);
                        $("#SpNo").val(data.spNo);
